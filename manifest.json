{
  "manifest_version": 3,
  "name": "Notepad Extension",
  "version": "1.0.0",
  "description": "A notepad that opens in new tabs with auto-save functionality",
  
  "chrome_url_overrides": {
    "newtab": "newtab.html"
  },
  
  "permissions": [
    "storage"
  ],
  
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "Notepad Extension"
  }
}
